<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- Reporting serializer -->
	<bean id="reportingSerializer" class="org.openmrs.module.reporting.serializer.ReportingSerializer"/>
	<bean parent="serializationServiceTarget">
		<property name="serializers">
			<list>
				<ref bean="reportingSerializer"/>
			</list>
		</property>
	</bean>

	<!-- Serialized Data Access Object 	-->
	<bean parent="serializedObjectDAO">
		<property name="supportedTypes">
			<list>
				<value>org.openmrs.module.indicator.Indicator</value>
				<value>org.openmrs.module.indicator.dimension.Dimension</value>
				<value>org.openmrs.module.cohort.definition.CohortDefinition</value>
				<value>org.openmrs.module.dataset.definition.DataSetDefinition</value>
				<value>org.openmrs.module.report.ReportDefinition</value>
			</list>
		</property>
	</bean>	


	<!-- Initialize report persistence handlers -->
	<bean id="serializedCohortDefinitionPersister" class="org.openmrs.module.cohort.definition.persister.SerializedCohortDefinitionPersister">
		<property name="dao"><ref bean="serializedObjectDAO"/></property>
		<property name="serializer"><ref bean="reportingSerializer"/></property>	
	</bean>
	<bean id="serializedDataSetDefinitionPersister" class="org.openmrs.module.dataset.definition.persister.SerializedDataSetDefinitionPersister">
		<property name="dao"><ref bean="serializedObjectDAO"/></property>
		<property name="serializer"><ref bean="reportingSerializer"/></property>
	</bean>	
	<bean id="serializedIndicatorPersister" class="org.openmrs.module.indicator.persister.SerializedIndicatorPersister">
		<property name="dao"><ref bean="serializedObjectDAO"/></property>
		<property name="serializer"><ref bean="reportingSerializer"/></property>
	</bean>
	<bean id="serializedDimensionPersister" class="org.openmrs.module.indicator.persister.SerializedDimensionPersister">
		<property name="dao"><ref bean="serializedObjectDAO"/></property>
		<property name="serializer"><ref bean="reportingSerializer"/></property>
	</bean>
	
	
	<!--  Base Report Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>org.openmrs.module.report.service.ReportService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.report.service.BaseReportService">
							<property name="serializedObjectDAO"><ref bean="serializedObjectDAO"/></property>
							<property name="reportDAO">
								<bean class="org.openmrs.module.report.service.db.HibernateReportDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>
							<property name="serializer"><ref bean="reportingSerializer"/></property>
						</bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors" />
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>		
			</list>
		</property>
	</bean>
	
	<!-- Base Cohort Definition Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>org.openmrs.module.cohort.definition.service.CohortDefinitionService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.cohort.definition.service.BaseCohortDefinitionService">
							<property name="serializedObjectDAO"><ref bean="serializedObjectDAO"/></property>
							<property name="serializer"><ref bean="reportingSerializer"/></property>
						</bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors" />
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>		
			</list>
		</property>
	</bean>

	<!--  Base Dataset Definition Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>org.openmrs.module.dataset.definition.service.DataSetDefinitionService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.dataset.definition.service.BaseDataSetDefinitionService"></bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors" />
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>		
			</list>
		</property>
	</bean>


	<!-- Base Indicator Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>org.openmrs.module.indicator.service.IndicatorService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.indicator.service.BaseIndicatorService"></bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors" />
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>		
			</list>
		</property>
	</bean>

	
</beans>
