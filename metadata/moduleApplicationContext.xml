<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- Serialized Data Access Object -->
	<bean parent="serializedObjectDAO">
		<property name="supportedTypes">
			<list merge="true">
				<value>org.openmrs.module.cohort.definition.CohortDefinition</value>
				<value>org.openmrs.module.dataset.definition.DataSetDefinition</value>
			</list>
		</property>
	</bean>	

	<!--  Serialized Data Set Definition Persister -->
	<bean id="simpleDataSetDefinitionPersister" 
			class="org.openmrs.module.dataset.definition.persister.SimpleDataSetDefinitionPersister">
		<property name="dao"><ref bean="serializedObjectDAO"/></property>	
	</bean>

	<!--  Serialized Cohort Definition Persister -->
	<bean id="serializedCohortDefinitionPersister" class="org.openmrs.module.cohort.definition.persister.SerializedCohortDefinitionPersister">
		<property name="dao"><ref bean="serializedObjectDAO"/></property>	
	</bean>
	
	<!--  Mock Report Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>org.openmrs.module.report.service.ReportService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.report.service.MockReportService">
						</bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors" />
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>		
			</list>
		</property>
	</bean>
	
	<!-- Base Cohort Definition Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.cohort.definition.service.CohortDefinitionService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.cohort.definition.service.BaseCohortDefinitionService">
						</bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors" />
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>		
			</list>
		</property>
	</bean>

	<!--  Base Dataset Definition Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.dataset.definition.service.DataSetDefinitionService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.dataset.definition.service.BaseDataSetDefinitionService">
						</bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors" />
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>		
			</list>
		</property>
	</bean>

	<!-- Mock Indicator Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.indicator.service.IndicatorService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.indicator.service.MockIndicatorService">
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
							<ref bean="loggingInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>		
			</list>
		</property>
	</bean>
</beans>
