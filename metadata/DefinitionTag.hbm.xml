<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.reporting.cohort.definition" >

	<class name="DefinitionTag" table="reporting_definition_tag">
	
		<id name="id" type="int" column="id" unsaved-value="0">
			<generator class="native">
				<param name="sequence">reporting_definition_tag_id_seq</param>
			</generator>
		</id>
		
		<property name="uuid" type="string" length="38" unique-key="true" not-null="true"/>
		<property name="definitionType" column="definition_type" length="255"  type="string" not-null="true" />
		
		 <!-- Each tag and definition_uuid combination should be unique -->
        <properties name="unique_definition_tag" unique="true" update="false">
        	<property name="tag" type="string" length="100" unique-key="true" not-null="true"/>
	        <property name="definitionUuid" column="definition_uuid" length="38" type="string" not-null="true" />
		</properties>
		
	</class>
	
</hibernate-mapping>