<?xml version="1.0" encoding="UTF-8"?>
<module configVersion="1.0">
	
	<!-- Base Module Properties -->
	<id>reporting</id>
	<name>Reporting</name>
	<version>0.3.0</version>
	<package>org.openmrs.module.@MODULE_ID@</package>
	<author>Partners In Health</author>
	<description>Core reporting API and services</description>
	<activator>@MODULE_PACKAGE@.ModuleActivator</activator>
	<updateURL>https://dev.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL>	
	<require_version>1.4.0.20.9108</require_version>
    <!-- 1.5.0.7475 -->

	<require_modules>
	   	<require_module>org.openmrs.module.serialization.xstream</require_module>
	</require_modules>

	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>@MODULE_PACKAGE@.extension.html.RunAdminListExt</class>
	</extension>
	<extension>
		<point>org.openmrs.module.reporting.run.localheader</point>
		<class>@MODULE_PACKAGE@.extension.html.RunAdminListExt</class>
	</extension>
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>@MODULE_PACKAGE@.extension.html.ManageAdminListExt</class>
	</extension>
	<extension>
		<point>org.openmrs.module.reporting.manage.localheader</point>
		<class>@MODULE_PACKAGE@.extension.html.ManageAdminListExt</class>
	</extension>
	<extension>
		<point>org.openmrs.gutter.tools</point>
		<class>@MODULE_PACKAGE@.extension.html.GutterListExt</class>
	</extension>
	
	<!-- Global Properties -->
	<globalProperty>
		<property>report.deleteReportsAgeInHours</property> <!-- Must start with `moduleId.` -->
		<defaultValue>72</defaultValue>
		<description>Reports that are not explicitly saved are deleted automatically when they are this many hours old. (Values less than or equal to zero means do not delete automatically)</description>
	</globalProperty>
	
	
	<!--  Message Properties -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	
	<!-- Hibernate Mappings -->
	<mappingFiles>
		ReportDesign.hbm.xml
	</mappingFiles>	

</module>
